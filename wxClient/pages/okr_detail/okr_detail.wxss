.okrDetail-container{
  display: flex;
  flex-direction:column;
}
.okrshow{
  padding: 10px;
}
.objective-list{
  margin-bottom: 20px;
  background-color:#f5f5f5;
  position: relative;
}
.objective-tilte{
  line-height: 30px;
  font-size: 18px;
  color: #333;
}
.objective-list.active:after{
  content: '完成';
  width: 60px;
  height: 30px;
  position: absolute;
  top:5px;
  right: -15px;
  border-radius: 4px;
  border: 2px solid red;
  text-align: center;
  line-height: 30px;
  font-size: 16px;
  color: #999;
  opacity: 0.4;
  transform: rotate(45deg);
}
.objective-list .create-time, .finished-time{
  position: relative;
  padding-left:15px;
  line-height: 30px;
  font-size: 16px;
  color:#999;
}
.create-time:before{
  content: '';
  position: absolute;
  top:10px;
  left:5px;
  display: inline-block;
  width: 4px;
  height: 4px;
  border-radius: 100%;
  background-color: #999;
}
.finished-time:before{
  content: '';
  position: absolute;
  top:10px;
  left:5px;
  display: inline-block;
  width: 4px;
  height: 4px;
  border-radius: 100%;
  background-color: #999;
}
.keyresult-list{
  padding-left: 10px;
  position: relative;
}
.keyresult-list:before{
  content: '';
  position: absolute;
  top:0px;
  left:4px;
  display: inline-block;
  width: 1px;
  height:100%;
  background-color: #f5f5f5;
}
.keyresult-item{
  margin-bottom: 15px;
  padding-left: 10px;
}
.keyresult-content{
  display: flex;
  justify-content: space-between;
}
.keyresult-title{
  font-size: 16px;
  color:#333;
  line-height: 30px;
}
.keyresult-title.active{
  color:#fff;
  background-color: #999;
}
